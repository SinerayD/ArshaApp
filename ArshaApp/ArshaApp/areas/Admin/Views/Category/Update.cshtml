@model ArshaApp.Core.Models.Category

<div class="container">
    <form action="/admin/category/update" method="post">
        <div class="form-group">
            <label for="Name">Category Name</label>
            <span class="alert text-danger" asp-validation-for="Name"></span>
            <input type="text" class="form-control" placeholder="Type name" asp-for="Name">
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>
